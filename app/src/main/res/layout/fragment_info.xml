        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="닉네임을 변경하세요"
                android:textColor="#7A8089"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nickname_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="변경할 닉네임을 입력하세요">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nickname_change_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="졸업하는 아기호랑이"
                        android:gravity="center"
                        android:textColor="@android:color/holo_red_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/nickname_change_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tiger_icon1"></ImageButton>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

